function callWithFallback(chatId, history) {
  const stats = getModelStats();
  const mode = getUserMode(chatId);
  const models = sortModels(MODEL_PRESETS[mode], stats);

  for (let model of models) {
    try {
      const result = callOpenRouter(model, history);
      const clean = cleanText(result);
      if (clean) { markModel(stats,model,true); return clean; } 
      else throw 'empty';
    } catch(e) { markModel(stats,model,false); }
  }

  try {
    const paid = callOpenRouter(PAID_MODEL, history);
    const clean = cleanText(paid);
    if (clean) return clean;
  } catch(e){}

  return "๐ค ะัะต ะผะพะดะตะปะธ ะฟะตัะตะณััะถะตะฝั.";
}

function callOpenRouter(model, history) {
  const response = UrlFetchApp.fetch('https://openrouter.ai/api/v1/chat/completions',{
    method:'post',
    contentType:'application/json',
    headers:{ Authorization:'Bearer '+getProp('OPENROUTER_KEY'), 'HTTP-Referer':'https://script.google.com','X-Title':'Jarvis Pro'},
    payload:JSON.stringify({
      model,
      max_tokens:600,
      temperature:0.7,
      messages:[{role:'system',content:SYSTEM_PROMPT}, ...history]
    }),
    muteHttpExceptions:true
  });
  const json = JSON.parse(response.getContentText());
  return json.choices?.[0]?.message?.content || '';
}

