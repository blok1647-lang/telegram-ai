function doPost(e) {
  try {
    const data = JSON.parse(e.postData.contents);
    if (!data.message || !data.message.text) return;

    const chat = data.message.chat;
    const text = data.message.text;
    const messageId = data.message.message_id;

    if (!['group','supergroup'].includes(chat.type)) return;
    if (!ALLOWED_CHAT_IDS.includes(chat.id)) return;
    if (!text) return;

    if (isFlood(chat.id)) {
      sendText(chat.id,"โณ ะะพะดะพะถะดะธ ัะตะบัะฝะดัโฆ",messageId);
      return;
    }

    if (text === '/start') {
      sendText(chat.id,"๐ ะฏ ะะตะฝะดะตั. ะะธัะธ ะฒะพะฟัะพั.",messageId);
      return;
    }

    if (text.startsWith('/model')) {
      handleModelCommand(chat.id,text,messageId);
      return;
    }

    // ----------------- ะะพะณะธะบะฐ ะพัะฒะตัะฐ -----------------
    let shouldRespond = false;

    // 1๏ธโฃ ะฆะธัะธัะพะฒะฐะฝะธะต ัะพะพะฑัะตะฝะธะน ะฑะพัะฐ
    if (data.message.reply_to_message && data.message.reply_to_message.from.is_bot) shouldRespond = true;

    // 2๏ธโฃ ะฃะฟะพะผะธะฝะฐะฝะธะต ะฑะพัะฐ ัะตัะตะท @Evilnpcbot
    if (text.includes(BOT_USERNAME)) shouldRespond = true;

    // 3๏ธโฃ ะะปััะตะฒัะต ัะปะพะฒะฐ
    for (let word of KEYWORDS) {
      if (text.toLowerCase().includes(word.toLowerCase())) {
        shouldRespond = true;
        break;
      }
    }

    if (!shouldRespond) return;
    // ---------------------------------------------------

    const cached = getCachedAnswer(text);
    if (cached) {
      sendText(chat.id,cached+"\n\nโก ะธะท ะบััะฐ",messageId);
      return;
    }

    let history = getHistory(chat.id);
    history.push({role:'user',content:text});

    let answer = callWithFallback(chat.id, history);

    if(Math.random() < 0.3){
