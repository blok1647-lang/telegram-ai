function isFlood(chatId){
  const key='flood_'+chatId;
  const cache=CacheService.getUserCache();
  const last=cache.get(key);
  const now=Date.now();
  if(last && (now-Number(last))/1000<FLOOD_INTERVAL) return true;
  cache.put(key,now.toString(),60);
  return false;
}

