function getModelStats() {
  const raw = CacheService.getScriptCache().get('model_stats');
  return raw?JSON.parse(raw):{};
}

function markModel(stats,model,ok) {
  stats[model] = stats[model]||{ok:0,fail:0};
  ok?stats[model].ok++:stats[model].fail++;
  CacheService.getScriptCache().put('model_stats',JSON.stringify(stats),21600);
}

function sortModels(models,stats) {
  return models.slice().sort((a,b)=>{
    const sa = stats[a]||{ok:0,fail:0};
    const sb = stats[b]||{ok:0,fail:0};
    return (sb.ok/(sb.fail+1))-(sa.ok/(sa.fail+1));
  });
}

